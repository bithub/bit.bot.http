<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:meta="http://namespaces.zope.org/meta">
  <include 
      package="bit.bot.base" 
      file="meta.zcml" 
      />
  <meta:directives namespace="http://namespaces.zope.org/zope">
    <meta:directive
        name="http"
        schema=".zcml.IHTTPDirective"
        handler=".zcml.http"
        />
    <meta:directive
        name="css"
        schema=".zcml.ICSSDirective"
        handler=".zcml.css"
        />
    <meta:directive
        name="js"
        schema=".zcml.IJSDirective"
        handler=".zcml.js"
        />
  </meta:directives>
</configure>
